<div class="min-h-full">
  <div class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div>
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight"><%= @study_area.title %></h1>
              <p class="mt-1 text-sm text-gray-500"><%= @study_area.description %></p>
            </div>
            <div class="flex items-center gap-x-3">
              <%= link_to edit_study_area_path(@study_area), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
                <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
                  <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
                </svg>
                <%= t('study_areas.actions.edit') %>
              <% end %>
              <%= button_to study_area_path(@study_area), method: :delete, class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600", data: { turbo_confirm: t('study_areas.confirm_delete') } do %>
                <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                </svg>
                <%= t('study_areas.actions.delete') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <div class="mb-4 sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h2 class="text-base font-semibold leading-6 text-gray-900"><%= t('goals.title') %></h2>
        <p class="mt-2 text-sm text-gray-700"><%= t('goals.description_for_area') %></p>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= link_to new_study_area_goal_path(@study_area), class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
          <span class="flex items-center">
            <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            <%= t('goals.new') %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3" data-controller="drag">
        <% Goal.statuses.keys.each do |status| %>
          <div data-drag-target="column" data-status="<%= status %>">
            <h3 class="flex items-center text-sm font-medium text-gray-900">
              <span class="mr-2"><%= t("goals.statuses.#{status}") %></span>
              <span class="rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600" data-count>
                <%= @study_area.goals.where(status: status).count %>
              </span>
            </h3>

            <ul role="list" class="mt-2 space-y-3">
              <% @study_area.goals.where(status: status).each do |goal| %>
                <li data-drag-target="card" 
                    data-goal-id="<%= goal.id %>" 
                    data-study-area-id="<%= @study_area.id %>" 
                    data-current-status="<%= status %>">
                  <%= link_to edit_study_area_goal_path(@study_area, goal), class: "group relative flex items-center rounded-lg bg-white p-4 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500" do %>
                    <div class="min-w-0 flex-1">
                      <div class="flex items-center justify-between">
                        <p class="truncate text-sm font-medium text-gray-900"><%= goal.title %></p>
                        <% if goal.due_date %>
                          <div class="ml-2 flex flex-shrink-0">
                            <p class="inline-flex rounded-full bg-<%= goal_status_color(goal.status) %>-50 px-2 text-xs font-semibold leading-5 text-<%= goal_status_color(goal.status) %>-700" data-status-badge>
                              <%= l(goal.due_date, format: :short) %>
                            </p>
                          </div>
                        <% end %>
                      </div>
                      <div class="mt-1">
                        <p class="text-sm text-gray-500 line-clamp-2"><%= goal.description %></p>
                      </div>
                      <div class="mt-2 flex items-center gap-x-2">
                        <div class="flex items-center gap-x-1 text-xs text-gray-500">
                          <svg class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zM6 8a2 2 0 11-4 0 2 2 0 014 0zM1.49 15.326a.78.78 0 01-.358-.442 3 3 0 014.308-3.516 6.484 6.484 0 00-1.905 3.959c-.023.222-.014.442.025.654a4.97 4.97 0 01-2.07-.655zM16.44 15.98a4.97 4.97 0 002.07-.654.78.78 0 00.357-.442 3 3 0 00-4.308-3.517 6.484 6.484 0 011.907 3.96 2.32 2.32 0 01-.026.654zM18 8a2 2 0 11-4 0 2 2 0 014 0zM5.304 16.19a.844.844 0 01-.277-.71 5 5 0 019.947 0 .843.843 0 01-.277.71A6.975 6.975 0 0110 18a6.974 6.974 0 01-4.696-1.81z" />
                          </svg>
                          <%= goal.resources.count %> <%= t('resources.title').downcase %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </li>
              <% end %>

              <% if @study_area.goals.where(status: status).empty? %>
                <li class="relative flex items-center space-x-3 rounded-lg border border-dashed border-gray-100 px-6 py-5 shadow-sm empty-state">
                  <div class="min-w-0 flex-1">
                    <p class="text-sm text-gray-500 text-center" data-empty-message><%= t('goals.no_goals_status') %></p>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
