<div id="study_areas_list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% study_areas.each do |study_area| %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">
            <%= link_to study_area.title, study_area_path(study_area), class: "hover:text-indigo-600" %>
          </h2>
          <div class="flex items-center space-x-2">
            <%= link_to edit_study_area_path(study_area),
                data: { turbo_frame: "modal_content", action: "modal#open" },
                class: "text-gray-400 hover:text-gray-500" do %>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
              </svg>
            <% end %>

            <%= button_to study_area_path(study_area), 
                method: :delete,
                class: "text-gray-400 hover:text-gray-500",
                data: { turbo_confirm: "Are you sure you want to delete this study area?" } do %>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
        <p class="mt-2 text-sm text-gray-500"><%= study_area.description %></p>
        <div class="mt-4">
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500">Goals</span>
            <span class="font-medium text-gray-900"><%= study_area.goals.count %></span>
          </div>
          <div class="mt-2">
            <div class="flex items-center">
              <div class="flex-1">
                <div class="bg-gray-200 rounded-full h-2">
                  <% completed_percentage = study_area.goals.any? ? (study_area.goals.where(status: :completed).count.to_f / study_area.goals.count * 100).round : 0 %>
                  <div class="bg-indigo-600 rounded-full h-2" style="width: <%= completed_percentage %>%"></div>
                </div>
              </div>
              <span class="ml-3 text-sm text-gray-500"><%= completed_percentage %>% complete</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
