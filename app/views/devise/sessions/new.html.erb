<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
  </div>

  <div class="mt-6 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render Ui::Input::Component.new(
        form: f,
        field: :email,
        type: :email,
        label: "Email address",
        required: true,
        autofocus: true,
        autocomplete: "email"
      ) %>

      <%= render Ui::Input::Component.new(
        form: f,
        field: :password,
        type: :password,
        label: "Password",
        required: true,
        autocomplete: "current-password"
      ) %>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-600" %>
          <%= f.label :remember_me, class: "ml-3 block text-sm leading-6 text-gray-900" %>
        </div>

        <div class="text-sm">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-primary-600 hover:text-primary-500" %>
        </div>
      </div>

      <div class="mt-6">
        <%= render Ui::Button::Component.new(variant: :primary, full_width: true, as: :button, type: "submit") do %>
          Sign in
        <% end %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-500">
      Not a member?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold leading-6 text-primary-600 hover:text-primary-500" %>
    </p>
  </div>
</div>
