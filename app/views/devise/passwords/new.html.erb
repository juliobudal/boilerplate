<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Reset your password</h2>
  </div>

  <div class="mt-6 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render Ui::Input::Component.new(
        form: f,
        field: :email,
        type: :email,
        label: "Email address",
        required: true,
        autofocus: true,
        autocomplete: "email",
        hint: "We'll send you an email with instructions to reset your password."
      ) %>

      <div class="mt-6">
        <%= render Ui::Button::Component.new(variant: :primary, full_width: true, as: :button, type: "submit") do %>
          Send reset instructions
        <% end %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-500">
      Remember your password?
      <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold leading-6 text-primary-600 hover:text-primary-500" %>
    </p>
  </div>
</div>
