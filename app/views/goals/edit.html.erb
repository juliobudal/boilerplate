<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-8">
  <div class="mx-auto max-w-3xl">
    <div class="mb-8">
      <div>
        <%= link_to study_area_path(@study_area), class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
          <svg class="-ml-1 mr-1 h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <%= t('goals.back_to_area', area: @study_area.title) %>
        <% end %>
      </div>
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight"><%= t('goals.edit') %></h1>
      <p class="mt-2 text-sm text-gray-700"><%= t('goals.edit_description') %></p>
    </div>

    <div data-controller="tabs" class="bg-white shadow sm:rounded-lg">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex" aria-label="Tabs">
          <button
            data-tabs-target="tab"
            data-action="tabs#switch"
            class="w-1/2 border-b-2 py-4 px-1 text-center text-sm font-medium"
            aria-controls="general-panel"
            role="tab"
          >
            <%= t('goals.tabs.general') %>
          </button>
          <button
            data-tabs-target="tab"
            data-action="tabs#switch"
            class="w-1/2 border-b-2 py-4 px-1 text-center text-sm font-medium"
            aria-controls="resources-panel"
            role="tab"
          >
            <%= t('goals.tabs.resources') %>
          </button>
        </nav>
      </div>

      <div data-tabs-target="panel" id="general-panel" role="tabpanel">
        <div class="px-4 py-5 sm:p-6">
          <%= form_with(model: [@study_area, @goal], class: "space-y-6") do |f| %>
            <div>
              <%= f.label :title, t('goals.fields.title'), class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div>
              <%= f.label :description, t('goals.fields.description'), class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.text_area :description, rows: 4, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
              <p class="mt-2 text-sm text-gray-500"><%= t('goals.description_help') %></p>
            </div>

            <div>
              <%= f.label :status, t('goals.fields.status'), class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.select :status, Goal.statuses.keys.map { |s| [t("goals.statuses.#{s}"), s] }, {}, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div>
              <%= f.label :due_date, t('goals.fields.due_date'), class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.date_field :due_date, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div class="flex justify-end gap-x-3">
              <%= link_to t('common.cancel'), study_area_path(@study_area), class: "rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
              <%= f.submit t('goals.update'), class: "rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>
          <% end %>
        </div>
      </div>

      <div data-tabs-target="panel" id="resources-panel" role="tabpanel" class="hidden">
        <div class="px-4 py-5 sm:p-6">
          <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
              <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t('resources.title') %></h3>
              <p class="mt-2 text-sm text-gray-500"><%= t('resources.description') %></p>
            </div>
            <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
              <%= link_to new_goal_resource_path(@goal), class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
                <span class="flex items-center">
                  <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                  </svg>
                  <%= t('resources.new') %>
                </span>
              <% end %>
            </div>
          </div>

          <div class="mt-6 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
              <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                <% if @goal.resources.any? %>
                  <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-300">
                      <thead class="bg-gray-50">
                        <tr>
                          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= t('resources.fields.title') %></th>
                          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t('resources.fields.type') %></th>
                          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t('resources.fields.description') %></th>
                          <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                            <span class="sr-only"><%= t('common.actions') %></span>
                          </th>
                        </tr>
                      </thead>
                      <tbody class="divide-y divide-gray-200 bg-white">
                        <% @goal.resources.each do |resource| %>
                          <tr>
                            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                              <% if resource.url.present? %>
                                <%= link_to resource.title, resource.url, target: "_blank", class: "text-indigo-600 hover:text-indigo-900" %>
                              <% else %>
                                <%= resource.title %>
                              <% end %>
                            </td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= t("resources.types.#{resource.resource_type}") %></td>
                            <td class="px-3 py-4 text-sm text-gray-500"><%= resource.description %></td>
                            <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                              <%= link_to t('common.edit'), edit_goal_resource_path(@goal, resource), class: "text-indigo-600 hover:text-indigo-900" %>
                              <%= link_to t('common.delete'), goal_resource_path(@goal, resource), data: { turbo_method: :delete, turbo_confirm: t('resources.confirm_delete') }, class: "ml-3 text-red-600 hover:text-red-900" %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% else %>
                  <div class="text-center">
                    <p class="mt-1 text-sm text-gray-500"><%= t('resources.no_resources') %></p>
                    <p class="mt-1 text-sm text-gray-500"><%= t('resources.create_first') %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
