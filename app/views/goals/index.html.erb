<div class="min-h-full">
  <div class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div>
          <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
            <%= @study_area ? t('goals.title_for_area', area: @study_area.title) : t('goals.title_all') %>
          </h1>
          <p class="mt-1 text-sm text-gray-500">
            <%= @study_area ? t('goals.description_for_area') : t('goals.description_all') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <p class="mt-2 text-sm text-gray-700">
          <%= @study_area ? t('goals.description_for_area') : t('goals.description_all') %>
        </p>
      </div>
      <% if @study_area %>
        <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
          <%= link_to t('goals.new'), new_study_area_goal_path(@study_area), class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= t('goals.fields.title') %></th>
                  <% unless @study_area %>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t('study_areas.title') %></th>
                  <% end %>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t('goals.fields.status') %></th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t('goals.fields.due_date') %></th>
                  <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                    <span class="sr-only"><%= t('common.actions') %></span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @goals.each do |goal| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                      <%= link_to goal.title, study_area_goal_path(goal.study_area, goal), class: "hover:text-indigo-600" %>
                    </td>
                    <% unless @study_area %>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                        <%= link_to goal.study_area.title, study_area_path(goal.study_area), class: "text-indigo-600 hover:text-indigo-900" %>
                      </td>
                    <% end %>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset
                        <%= case goal.status
                          when 'not_started'
                            'text-gray-600 bg-gray-50 ring-gray-500/10'
                          when 'in_progress'
                            'text-yellow-800 bg-yellow-50 ring-yellow-600/20'
                          when 'completed'
                            'text-green-700 bg-green-50 ring-green-600/20'
                          end %>">
                        <%= t("goals.statuses.#{goal.status}") %>
                      </span>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <% if goal.due_date.present? %>
                        <%= goal.due_date.strftime("%b %d, %Y") %>
                      <% else %>
                        <span class="text-gray-400"><%= t('goals.no_due_date') %></span>
                      <% end %>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <div class="flex justify-end gap-2">
                        <%= link_to edit_study_area_goal_path(goal.study_area, goal), class: "text-gray-400 hover:text-gray-500", title: t('common.edit') do %>
                          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
                            <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
                          </svg>
                        <% end %>
                        <%= button_to study_area_goal_path(goal.study_area, goal), method: :delete, class: "text-gray-400 hover:text-gray-500", data: { turbo_confirm: t('goals.confirm_delete') }, title: t('common.delete') do %>
                          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
