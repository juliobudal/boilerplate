<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-3xl">
    <div class="bg-white shadow sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900"><%= @goal.title %></h3>
        <div class="mt-2 max-w-xl text-sm text-gray-500">
          <p><%= @goal.description %></p>
        </div>
        <div class="mt-3 text-sm">
          <span class="<%= status_color(@goal.status) %> inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset">
            <%= @goal.status.humanize %>
          </span>
        </div>
        <div class="mt-5">
          <%= link_to "Edit", edit_study_area_goal_path(@study_area, @goal), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= button_to "Delete", study_area_goal_path(@study_area, @goal), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "ml-3 inline-flex items-center rounded-md bg-red-50 px-3 py-2 text-sm font-semibold text-red-700 shadow-sm ring-1 ring-inset ring-red-600/10 hover:bg-red-100" %>
          <%= link_to goal_resources_path(@goal), class: "ml-3 inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
            <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            Manage Resources
          <% end %>
        </div>
      </div>
    </div>

    <%= render StudyTimerComponent.new(goal: @goal) %>

    <div class="mt-6 bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Study Statistics</h3>
        <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2">
          <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500">Total Study Time</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @goal.total_study_time %> minutes</dd>
          </div>
          <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500">Average Session Duration</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @goal.average_session_duration %> minutes</dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="mt-6 bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="sm:flex sm:items-center">
          <div class="sm:flex-auto">
            <h3 class="text-base font-semibold leading-6 text-gray-900">Study Resources</h3>
            <p class="mt-2 text-sm text-gray-500">Your learning materials and references for this goal.</p>
          </div>
          <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
            <%= link_to new_goal_resource_path(@goal), class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" do %>
              Add resource
            <% end %>
          </div>
        </div>

        <div class="mt-6 flow-root">
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
              <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-300">
                  <thead class="bg-gray-50">
                    <tr>
                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Title</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Type</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Tags</th>
                      <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                        <span class="sr-only">Actions</span>
                      </th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 bg-white">
                    <% @goal.resources.includes(:tags).ordered.limit(5).each do |resource| %>
                      <tr>
                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                          <div class="flex items-center">
                            <div class="ml-4">
                              <div class="font-medium text-gray-900">
                                <% if resource.url.present? %>
                                  <%= link_to resource.title, resource.url, target: "_blank", class: "text-indigo-600 hover:text-indigo-900" %>
                                <% else %>
                                  <%= resource.title %>
                                <% end %>
                              </div>
                              <div class="text-gray-500"><%= truncate(resource.description, length: 50) %></div>
                            </div>
                          </div>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                          <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">
                            <%= resource.resource_type.humanize %>
                          </span>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                          <div class="flex flex-wrap gap-1">
                            <% resource.tags.each do |tag| %>
                              <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                                <%= tag.name %>
                              </span>
                            <% end %>
                          </div>
                        </td>
                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                          <%= link_to "Edit", edit_goal_resource_path(@goal, resource), class: "text-indigo-600 hover:text-indigo-900" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <% if @goal.resources.count > 5 %>
                  <div class="px-4 py-3 sm:px-6">
                    <%= link_to "View all resources", goal_resources_path(@goal), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
