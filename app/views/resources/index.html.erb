<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Resources for <%= @goal.title %></h1>
      <p class="mt-2 text-sm text-gray-700">A list of all study resources for this goal.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to new_goal_resource_path(@goal), class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" do %>
        Add resource
      <% end %>
    </div>
  </div>

  <div class="mt-6">
    <div class="mb-4 flex space-x-2">
      <%= link_to "All", goal_resources_path(@goal), class: "rounded-full px-3 py-1.5 text-sm font-medium #{params[:type].blank? ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:text-gray-800'}" %>
      <% Resource.resource_types.keys.each do |type| %>
        <%= link_to type.humanize, goal_resources_path(@goal, type: type), 
            class: "rounded-full px-3 py-1.5 text-sm font-medium #{params[:type] == type ? 'bg-indigo-100 text-indigo-700' : 'text-gray-600 hover:text-gray-800'}" %>
      <% end %>
    </div>
  </div>

  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Title</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Type</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Tags</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Added</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @resources.each do |resource| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                    <div class="flex items-center">
                      <div class="ml-4">
                        <div class="font-medium text-gray-900">
                          <% if resource.url.present? %>
                            <%= link_to resource.title, resource.url, target: "_blank", class: "text-indigo-600 hover:text-indigo-900" %>
                          <% else %>
                            <%= resource.title %>
                          <% end %>
                        </div>
                        <div class="text-gray-500"><%= truncate(resource.description, length: 50) %></div>
                      </div>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">
                      <%= resource.resource_type.humanize %>
                    </span>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <div class="flex flex-wrap gap-1">
                      <% resource.tags.each do |tag| %>
                        <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                          <%= tag.name %>
                        </span>
                      <% end %>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= time_ago_in_words(resource.created_at) %> ago
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <%= link_to "Edit", edit_goal_resource_path(@goal, resource), class: "text-indigo-600 hover:text-indigo-900" %>
                    <%= button_to "Delete", goal_resource_path(@goal, resource), method: :delete, class: "ml-3 text-red-600 hover:text-red-900", form: { data: { turbo_confirm: "Are you sure?" } } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
