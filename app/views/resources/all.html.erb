<div class="min-h-full">
  <div class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div>
          <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Resources</h1>
          <p class="mt-1 text-sm text-gray-500">View and manage all your learning resources in one place.</p>
        </div>

        <div class="mt-4 flex flex-wrap gap-2">
          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-700">Type:</span>
            <% Resource.resource_types.keys.each do |type| %>
              <%= link_to type.humanize, resources_path(type: type), class: "inline-flex items-center rounded-md #{params[:type] == type ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-50 text-gray-600'} px-2 py-1 text-sm font-medium ring-1 ring-inset ring-gray-500/10" %>
            <% end %>
            <% if params[:type].present? %>
              <%= link_to "Clear", resources_path, class: "inline-flex items-center rounded-md bg-white px-2 py-1 text-sm font-medium text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
            <% end %>
          </div>

          <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-700">Tags:</span>
            <% @tags.each do |tag| %>
              <%= link_to tag.name, resources_path(tag_ids: [tag.id]), class: "inline-flex items-center rounded-md #{params[:tag_ids]&.include?(tag.id.to_s) ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-50 text-gray-600'} px-2 py-1 text-sm font-medium ring-1 ring-inset ring-gray-500/10" %>
            <% end %>
            <% if params[:tag_ids].present? %>
              <%= link_to "Clear", resources_path, class: "inline-flex items-center rounded-md bg-white px-2 py-1 text-sm font-medium text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <% if @resources.any? %>
      <ul role="list" class="divide-y divide-gray-100">
        <% @resources.each do |resource| %>
          <li class="flex items-center justify-between gap-x-6 py-5">
            <div class="min-w-0">
              <div class="flex items-start gap-x-3">
                <p class="text-sm font-semibold leading-6 text-gray-900"><%= resource.title %></p>
                <p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= resource_type_classes(resource.resource_type) %>">
                  <%= resource.resource_type.humanize %>
                </p>
              </div>
              <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
                <p class="truncate">Goal: <%= link_to resource.goal.title, edit_goal_path(resource.goal), class: "text-indigo-600 hover:text-indigo-500" %></p>
                <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 fill-current">
                  <circle cx="1" cy="1" r="1" />
                </svg>
                <p class="whitespace-nowrap">Added <%= time_ago_in_words(resource.created_at) %> ago</p>
              </div>
              <% if resource.description.present? %>
                <p class="mt-1 truncate text-sm leading-6 text-gray-500"><%= resource.description %></p>
              <% end %>
              <% if resource.tags.any? %>
                <div class="mt-1 flex items-center gap-1">
                  <% resource.tags.each do |tag| %>
                    <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                      <%= tag.name %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="flex flex-none items-center gap-x-4">
              <% if resource.url.present? %>
                <%= link_to resource.url, target: "_blank", rel: "noopener noreferrer", class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
                  Visit
                  <span class="sr-only">, <%= resource.title %></span>
                <% end %>
              <% end %>
              <%= link_to edit_resource_path(resource), class: "hidden sm:block" do %>
                <span class="sr-only">Edit <%= resource.title %></span>
                <svg class="h-5 w-5 text-gray-400 hover:text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
                  <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
                </svg>
              <% end %>
              <%= button_to resource_path(resource), method: :delete, class: "hidden sm:block", form: { data: { turbo_confirm: "Are you sure you want to delete this resource?" } } do %>
                <span class="sr-only">Delete <%= resource.title %></span>
                <svg class="h-5 w-5 text-gray-400 hover:text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">No resources yet</h3>
        <p class="mt-1 text-sm text-gray-500">Resources can be added from within each goal.</p>
      </div>
    <% end %>
  </div>
</div>
